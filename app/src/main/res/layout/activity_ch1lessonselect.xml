<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterPlay.Chapter1.Ch1LessonSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_chapSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT LESSON"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@color/teal_700"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_200">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_cell"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/cell_theory"/>
                <Button
                    android:id="@+id/btn_cell_theo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="LESSON 1: CELL THEORY"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/img_biomol"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/cell_structure"/>

                <Button
                    android:id="@+id/btn_cell_struc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="LESSON 2: CELL STRUCTURE"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/img_en_tran"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/prokaryotes"/>

                <Button
                    android:id="@+id/btn_pro_euk"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:text="LESSON 3: PROKARYOTE VS. EUKARYOT"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>