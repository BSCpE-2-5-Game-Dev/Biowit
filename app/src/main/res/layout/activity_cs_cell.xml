<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CS_Cell">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lbl_Select_Chap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:text="SELECT LESSON"
            android:textColor="#99cc00"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chap_select_bg_c"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Cell"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/cell_theory" />

                <Button
                    android:id="@+id/btn_Cell_Theo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:text="LESSON 1: CELL THEORY"
                    android:textColor="#99CC00"
                    android:textStyle="bold"
                    app:backgroundTint="@color/black" />

                <ImageView
                    android:id="@+id/img_Bio_Mole"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/cell_structure" />

                <Button
                    android:id="@+id/btn_Cell_Struc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:text="LESSON 2: CELL STRUCTURE"
                    android:textColor="#99CC00"
                    android:textStyle="bold"
                    app:backgroundTint="@color/black" />

                <ImageView
                    android:id="@+id/img_Energy"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/prokaryotes" />

                <Button
                    android:id="@+id/btn_Pro_Euk"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:text="LESSON 3: PROKARYOTES VS. EUKARYOTES"
                    android:textColor="#99CC00"
                    android:textStyle="bold"
                    app:backgroundTint="@color/black" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>